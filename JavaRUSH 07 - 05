package com.javarush.task.task07.task0705;

import java.io.BufferedReader;
import java.io.InputStreamReader;

/* 
Один большой массив и два маленьких
1. Создать массив на 20 чисел.
2. Ввести в него значения с клавиатуры.
3. Создать два массива на 10 чисел каждый.
4. Скопировать большой массив в два маленьких: половину чисел в первый маленький, вторую половину во второй маленький.
5. Вывести второй маленький массив на экран, каждое значение выводить с новой строки.
*/

public class Solution {
    public static void main(String[] args) throws Exception {
        int[] first = new int[10]; // Создать массив из 10 чисел (первый).
        int[] second = new int[10]; // Создать массив из 10 чисел (второй).
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        int[] big = new int[20]; //  Создать массив на 20 чисел (большой).
        for (int i = 0; i < big.length; i++) {
            big[i] = Integer.parseInt(reader.readLine()); //Ввести с клавиатуры 20 чисел, заполнить ими массив строк.
        }
        for(int i = 0; i < 10; i++ ) {
            first[i] = big[i];// В каждую ячейку массива 1 записываем значения из Большого массива , индекс/номер ячейки которой совпадает с текущим индексом из массива чисел.
        }
        for(int i = 10; i < 20; i++ ) {
            second[i-10] = big[i];// В каждую ячейку массива 1 записываем значения из Большого массива , индекс/номер ячейки которой совпадает с текущим индексом из массива чисел.
        }
        for (int i = 0; i < 10; i++) {
            System.out.println(second[i]);  //Вывести содержимое 2 массива чисел на экран, каждое значение выводить с новой строки.
        }
    }
}
